package ch04.practice.dao;

import java.util.ArrayList;

import ch04.practice.dto.Book;
import dto.Product;

public class BookRepository {
	private ArrayList<Book> listOfBooks = new ArrayList<Book>();

	public BookRepository() {
		Book book1 = new Book("ISBN0001", "HTML5+CSS3", 15000);
		book1.setDescription("4.7-inch,1334x750 Retina HD display, 8-megapixel iSight Camera");
		book1.setCategory("Smart Phone");
		book1.setManufacturer("Apple");
		book1.setUnitsInStock(1000);
		book1.setCondition("New");
	}
	
	public ArrayList<Book> getAllBooks() {
		return listOfBooks;
	}
}